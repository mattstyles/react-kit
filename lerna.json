{
  "version": "0.20.0",
  "useWorkspaces": true,
  "npmClient": "yarn",
  "create": {
    "license": "MIT"
  },
  "command": {
    "version": {
      "message": "publish :metal: %s"
    },
    "create": {
      "publishConfig": {
        "access": "public"
      },
      "license": "MIT",
      "homepage": "https://github.com/mattstyles/react-kit"
    }
  },
  "clog": {
    "commits": {
      "add": ":rocket: new feature",
      "update": ":godmode: enhancement",
      "fix": ":bug: fix",
      "remove": ":see_no_evil: remove",
      "docs": ":books: documentation",
      "break": ":boom: breaking change",
      "prep": ":house: internal"
    }
  }
}
