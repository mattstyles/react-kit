{
  "name": "@react-kit/monorepo",
  "private": "true",
  "version": "0.0.0",
  "description": "Some react powered UI components",
  "license": "MIT",
  "author": "Matt Styles",
  "workspaces": [
    "packages/@raid-ui/**",
    "packages/@raid/**",
    "packages/storybook"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mattstyles/react-kit.git"
  },
  "scripts": {
    "clean": "lerna clean",
    "setup": "lerna bootstrap --concurrency=1",
    "_test": "lerna run test --ignore @react-kit/monorepo",
    "test": "ava packages/@raid*/**/*.test.js",
    "size": "lerna run size",
    "build": "lerna run build",
    "publish-dry-run": "lerna run prepublishOnly",
    "publish": "lerna publish",
    "start": "start-storybook -p 6006",
    "_start": "yarn workspace @raid/basic-kit start",
    "start:app": "yarn workspace @raid/app-kit start",
    "start:md": "yarn workspace @raid/markdown-kit start"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "standard"
    ]
  },
  "standard": {
    "parser": "babel-eslint",
    "ignore": [
      "**/node_modules/**",
      "**/lib/",
      "**/dist/"
    ]
  },
  "ava": {
    "babel": true,
    "require": [
      "@babel/register"
    ]
  },
  "devDependencies": {
    "@ava/babel": "^1.0.1",
    "@babel/cli": "^7.11.6",
    "@babel/core": "^7.11.6",
    "@babel/plugin-proposal-class-properties": "^7.10.1",
    "@babel/plugin-proposal-object-rest-spread": "^7.11.0",
    "@babel/preset-env": "^7.11.5",
    "@babel/preset-react": "^7.10.1",
    "@babel/register": "^7.11.5",
    "@size-limit/preset-small-lib": "^4.6.0",
    "@storybook/addon-actions": "^5.3.19",
    "@storybook/addon-backgrounds": "^5.3.19",
    "@storybook/addon-docs": "^5.3.19",
    "@storybook/addon-knobs": "^5.3.19",
    "@storybook/addon-links": "^5.3.19",
    "@storybook/addon-viewport": "^5.3.19",
    "@storybook/react": "^5.3.19",
    "ava": "^3.12.1",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.1.0",
    "babel-plugin-styled-components": "^1.11.1",
    "babel-plugin-transform-react-require": "^1.0.1",
    "husky": "^4.3.0",
    "lerna": "^3.22.1",
    "lint-staged": "^10.4.0",
    "mkdirp": "^1.0.4",
    "rambda": "^6.1.0",
    "react": "^16.13.0",
    "react-dom": "^16.13.0",
    "react-is": "^16.13.0",
    "size-limit": "^4.6.0",
    "standard": "^14.3.4",
    "styled-components": "^5.2.0"
  }
}
